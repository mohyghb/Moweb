<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:id="@+id/mo_error_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/MoWhite">


    <TextView
        android:id="@+id/mo_error_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/MoBackground"
        android:textSize="45sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        tool:text="Title" />

    <TextView
        android:id="@+id/mo_error_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/MoBackground"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/mo_error_advanced_button"
        app:layout_constraintEnd_toEndOf="@id/mo_error_title"
        app:layout_constraintStart_toStartOf="@id/mo_error_title"
        app:layout_constraintTop_toBottomOf="@id/mo_error_title"
        app:layout_constraintVertical_bias="0"
        tool:text="Some type of description for the error goes here" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/mo_error_advanced_button"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/advanced"
        android:textColor="@color/MoBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/mo_error_title"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toStartOf="@id/mo_error_title"
        app:strokeColor="@color/MoBackground" />


</androidx.constraintlayout.widget.ConstraintLayout>