<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center">


    <ImageView
        android:id="@+id/empty_layout_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_baseline_bookmark_border_24"
        android:backgroundTint="@color/MoInverseColor" />

    <TextView
        android:id="@+id/empty_layout_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:text="@string/empty_layout_title_bookmark"
        android:textColor="@color/MoInverseColor"
        android:textAllCaps="true"
        android:letterSpacing="0.15"
        android:textStyle="bold"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

    <TextView
        android:id="@+id/empty_layout_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/empty_layout_description_bookmark"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"/>

</LinearLayout>