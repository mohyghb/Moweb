<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name= "AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/MaterialDark</item>

        <item name="imageButtonStyle">@style/MoImageButton_Style_Dark</item>
        <item name="materialCardViewStyle">@style/MoCardStyle_Dark</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="popupMenuStyle">@style/Widget.MaterialComponents.PopupMenu</item>
        <item name="actionOverflowMenuStyle">@style/Widget.MaterialComponents.PopupMenu.Overflow</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowActivityTransitions">true</item>
        <!--Prevent multi_touch-->
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
    </style>

    <style name="MoCardStyle_Dark" parent="Widget.MaterialComponents.CardView">
        <item name="android:backgroundTint">@color/MaterialElevatedCard</item>
        <item name="cardElevation">@dimen/card_elevation_night</item>
    </style>

    <style name="MoImageButton_Style_Dark" parent="Widget.AppCompat.ImageButton">
        <item name="android:tint">@color/MoWhite</item>
    </style>

    <style name="MoMaterialCardViewStyleBright" parent="Widget.MaterialComponents.CardView">
        <item name="android:backgroundTint">@color/MoWhite_v2</item>
        <item name="cardElevation">3dp</item>
    </style>

</resources>