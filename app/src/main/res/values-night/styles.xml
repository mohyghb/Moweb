<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name= "AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/MaterialDark</item>
        <item name="imageButtonStyle">@style/MoImageButton_Style_Dark</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationStyle</item>
        <item name="materialCardViewStyle">@style/MoCardStyle_Dark</item>
        <item name="android:statusBarColor">@color/MaterialDark</item>
        <item name="android:listViewStyle">@style/MoListStyle_Dark</item>
        <item name="recyclerViewStyle">@style/MoListStyle_Dark</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="popupMenuStyle">@style/Widget.MaterialComponents.PopupMenu</item>
        <item name="actionOverflowMenuStyle">@style/Widget.MaterialComponents.PopupMenu.Overflow</item>
    </style>



    <style name="MoListStyle_Dark" parent="Widget.AppCompat.ListView">
        <item name="android:backgroundTint">@color/MaterialGrey</item>
    </style>



    <style name="MoCardStyle_Dark" parent="Widget.MaterialComponents.CardView">
        <item name="android:backgroundTint">@color/MaterialGrey</item>
        <item name="cardElevation">@dimen/card_elevation_night</item>
    </style>


    <style name="MoImageButton_Style_Dark" parent="Widget.AppCompat.ImageButton">
        <item name="android:tint">@color/colorPrimary</item>
    </style>


    <style name="MoReceivedMessageCard" parent="Widget.MaterialComponents.CardView">
        <item name="android:backgroundTint">@color/colorAccent</item>
    </style>

    <style name="MoSentMessageCard" parent="Widget.MaterialComponents.CardView">
        <item name="android:backgroundTint">@color/MoDarkGrey</item>
    </style>


    <style name="MoSearchAppBarCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@android:color/black</item>
        <item name="cardElevation">5dp</item>
    </style>



</resources>