<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/MoBlack</item>
        <item name="materialCardViewStyle">@style/MoMaterialCardViewStyleBright</item>
        <item name="android:listViewStyle">@style/MoListStyle</item>
        <item name="recyclerViewStyle">@style/MoListStyle</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationStyle</item>
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="popupMenuStyle">@style/Widget.MaterialComponents.PopupMenu</item>
        <item name="actionOverflowMenuStyle">@style/Widget.MaterialComponents.PopupMenu.Overflow</item>
    </style>



    <style name="MoListStyle" parent="Widget.AppCompat.ListView">
        <item name="android:backgroundTint">@color/MoWhite</item>
    </style>

    <style name="MoMaterialCardViewStyleBright" parent="Widget.MaterialComponents.CardView">
        <item name="android:backgroundTint">@color/MoWhite_v2</item>
        <item name="cardElevation">3dp</item>
    </style>

    <style name="MoBottomNavigationStyleLight" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/MoWhite</item>
    </style>


    <style name="MoButtonStyle_Light" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/MoWhite</item>
    </style>

    <style name="MoTitleTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>







    <style name="WindowAnimationStyle">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>







    <style name="MoSearchAppBarCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="cardElevation">5dp</item>
    </style>



</resources>
