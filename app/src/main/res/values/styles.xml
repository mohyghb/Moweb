        <item name="materialCardViewStyle">@style/MoMaterialCardViewStyleBright</item>

        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="popupMenuStyle">@style/Widget.MaterialComponents.PopupMenu</item>
        <item name="actionOverflowMenuStyle">@style/Widget.MaterialComponents.PopupMenu.Overflow</item>

        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowActivityTransitions">true</item>

    </style>



    <style name="MoListStyle" parent="Widget.AppCompat.ListView">
        <item name="android:backgroundTint">@color/MoWhite</item>
    </style>

    <style name="MoMaterialCardViewStyleBright" parent="Widget.MaterialComponents.CardView">
        <item name="android:backgroundTint">@color/MoWhite_v2</item>
        <item name="cardElevation">3dp</item>
    </style>

    <style name="MoBottomNavigationStyleLight" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/MoWhite</item>
    </style>


    <style name="MoButtonStyle_Light" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/MoWhite</item>
    </style>

    <style name="MoTitleTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>







