<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="materialCardViewStyle">@style/MoMaterialCardViewStyleBright</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="popupMenuStyle">@style/Widget.MaterialComponents.PopupMenu</item>
        <item name="actionOverflowMenuStyle">@style/Widget.MaterialComponents.PopupMenu.Overflow</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <!--Prevent multi_touch-->
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
    </style>

    <style name="MoListStyle" parent="Widget.AppCompat.ListView">
        <item name="android:backgroundTint">@color/MoWhite</item>
    </style>

    <style name="MoMaterialCardViewStyleBright" parent="Widget.MaterialComponents.CardView">
        <item name="android:backgroundTint">@color/MoWhite_v2</item>
        <item name="cardElevation">3dp</item>
    </style>

    <style name="MoBottomNavigationStyleLight" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/MoWhite</item>
    </style>

    <style name="MoButtonStyle_Light" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/MoWhite</item>
    </style>

    <style name="MoTitleTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="MoToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="backgroundTint">@color/MoBackground</item>
        <item name="backgroundColor">@color/MoBackground</item>
        <item name="background">@color/MoBackground</item>
        <item name="android:elevation">0dp</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="mo_view_holder_title_text" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:requiresFadingEdge">horizontal</item>
        <item name="android:singleLine">true</item>
        <item name="android:fadingEdgeLength">@dimen/mo_fade_edge_text_view</item>
        <item name="android:ellipsize">none</item>
    </style>
</resources>
